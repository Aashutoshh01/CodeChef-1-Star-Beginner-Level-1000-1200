#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    int a[n];
	    for(int i=0;i<n;i++){
	        cin>>a[i];
	    }
	    int p=0,q=0;
	    for(int i=0;i<n;i++){
	        if(a[i]%2==0){
	            p++;
	        }
	        else{
	            q++;
	        }
	    }
	    if(n==1){
	        cout<<"1"<<endl;
	    }
	    else{
    	    if(q%2==0){
    	        cout<<"1"<<endl;
    	    }
    	    else{
    	        cout<<"2"<<endl;
    	    }
	    }
	}
	return 0;
}
