#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,a,b;
	    string s;
	    cin>>n>>a>>b>>s;
	    int p=0,q=0;
	    for(int i=0;i<n;i++){
	        if(s[i]=='0'){
	            p++;
	        }
	        else if(s[i]=='1'){
	            q++;
	        }
	    }
	    cout<<a*p+b*q<<endl;
	}
	return 0;
}
