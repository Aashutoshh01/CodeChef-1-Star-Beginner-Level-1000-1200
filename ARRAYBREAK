#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    int a[n];
	    int p=0,q=0;
	    for(int i=0;i<n;i++){
	        cin>>a[i];
	    }
	    for(int i=0;i<n;i++){
	        if(a[i]%2==0){
	            p++;
	        }
	        else{
	            q++;
	        }
	    }
	    if(p==0 || q==0){
	        cout<<"0"<<endl;
	    }
	    else{
	        cout<<p<<endl;
	    }
	}
	return 0;
}
