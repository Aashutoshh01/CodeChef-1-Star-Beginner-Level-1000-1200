#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,x,y;
	    string s;
	    cin>>n>>x>>y>>s;
	    int a=0,b=0;
	    for(int i=0;i<n;i++){
	        if(s[i]=='0'){
	            a++;
	        }
	        else if(s[i]=='1'){
	            b++;
	        }
	    }
	    if(a==0 || b==0){
	        cout<<"0"<<endl;
	    }
	    else{
	        if(x<=y){
	            cout<<x<<endl;
	        }
	        else{
	            cout<<y<<endl;
	        }
	    }
	}
	return 0;
}
