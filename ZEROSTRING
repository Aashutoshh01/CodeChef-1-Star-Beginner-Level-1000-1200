#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    string s;
	    cin>>n>>s;
	    int a=0,b=0;
	    for(int i=0;s[i]!='\0';i++){
	        if(s[i]=='0'){
	            a++;
	        }
	        else if(s[i]=='1'){
	            b++;
	        }
	    }
	    if(a==b){
	        cout<<a<<endl;
	    }
	    else if(a>b){
	        cout<<b<<endl;
	    }
	    else if(b>a){
	        cout<<1+a<<endl;
	    }
	}
	return 0;
}
