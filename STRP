#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    string s;
	    int count=0;
	    cin>>n>>s;
	    for(int i=0;i<n;i++){
	        if(s[i+1]==s[i]){
	            i++;
	        }
	        count++;
	    }
	    cout<<count<<endl;
	}
	return 0;
}
