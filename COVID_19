#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,m;
	    cin>>n>>m;
	    if(n%2==0 && m%2==0){
	        cout<<(n/2)*(m/2)<<endl;
	    }
	    else if(n%2==0 && m%2!=0){
	        cout<<(n/2)*(1+m/2)<<endl;
	    }
	    else if(n%2!=0 && m%2==0){
	        cout<<(1+n/2)*(m/2)<<endl;
	    }
	    else if(n%2!=0 && m%2!=0){
	        cout<<(1+n/2)*(1+m/2)<<endl;
	    }
	}
	return 0;
}
