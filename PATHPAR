#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,k;
	    cin>>n>>k;
	    if(n%2==0){
	        cout<<"Yes"<<endl;
	    }
	    else{
	        if(k%2==0){
	            cout<<"No"<<endl;
	        }
	        else{
	            cout<<"Yes"<<endl;
	        }
	    }
	}
	return 0;
}
