#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    string s;
	    cin>>s;
	    int count=0;
	    for(int i=0;s[i]!='\0';i++){
	        if(s[i]=='1'){
	            count++;
	            while(s[i+1]=='1'){
	                i++;
	            }
	        }
	    }
	    cout<<count<<endl;
	}
	return 0;
}
