#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    long int n;
	    cin>>n;
	    long int a[n];
	    long int p=0,q=0,r=0;
	    for(long int i=0;i<n;i++){
	        cin>>a[i];
	    }
	    for(long int i=0;i<n;i++){
	        if(a[i]>0){
	            p++;
	        }
	        else if(a[i]<0){
	            q++;
	        }
	        else{
	            r++;
	        }
	    }
	    cout<<(p*(p-1)/2)+(q*(q-1)/2)<<endl;
	}
	return 0;
}
